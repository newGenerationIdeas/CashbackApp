<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/venue_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"

    android:orientation="vertical"
    android:padding="4dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#7affffff"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/venue_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="start"
            android:src="@mipmap/ic_launcher_round"
            android:transitionName="KEY_IMAGE_TRANSITION"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/venue_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:transitionName="KEY_NAME_TRANSITION"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#131313"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_location_mdp"
                    android:layout_gravity="top"
                    android:layout_margin="4dp"
                    />
                <TextView
                    android:id="@+id/venue_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="17sp"


                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="6 %"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:drawableTop="@drawable/cashback_image"
            android:id="@+id/cashback_present"

            />

    </LinearLayout>


    <Button
        android:id="@+id/details_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/circle_button"
        android:text="Full details "
        android:textSize="14sp"
        android:visibility="gone"
        />

    </LinearLayout>
</android.support.v7.widget.CardView>